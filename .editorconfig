root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space
max_line_length = 79

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.rst]
indent_size = 3
indent_style = space
max_line_length = 80

[{*.yaml,*.yml}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[{*.awk,*.sh}]
indent_style = tab
max_line_length = 80

[explorer/*]
indent_style = tab
max_line_length = 80

[type/*/{explorer/*,gencode-*,manifest}]
indent_style = tab
max_line_length = 80
